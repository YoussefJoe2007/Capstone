@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> signInManager
@{
    Layout = null;  
    }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Tashkheesy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />


    <style>
        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #fff;
            color: #333;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            background-color: #f5f5f5;
            border-bottom: 1px solid #ddd;
            flex-wrap: wrap;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            color: #007bff;
        }

        nav a {
            margin: 0 1rem;
            text-decoration: none;
            color: #333;
        }

        .search-bar {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 0.5rem;
        }

        .right-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .icon-btn {
            position: relative;
            cursor: pointer;
        }

            .icon-btn img {
                width: 24px;
                height: 24px;
            }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background-color: red;
            color: white;
            border-radius: 50%;
            font-size: 10px;
            width: 16px;
            height: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .main-title {
            text-align: center;
            font-size: 2rem;
            font-weight: bold;
            color: #007bff;
            margin: 2rem 0;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            padding: 0 2rem 4rem;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            background: #fff;
        }

            .card img {
                width: 100%;
                height: 180px;
                object-fit: cover;
            }

        .card-body {
            padding: 1rem;
        }

            .card-body h4 {
                margin: 0.5rem 0;
                font-size: 1.1rem;
                color: #333;
            }

            .card-body p {
                font-size: 0.9rem;
                color: #666;
            }

        .container {
            width: 90%;
            margin: auto;
            padding: 20px 0;
        }

        .section-title {
            text-align: center;
            color: #007bff;
            font-size: 28px;
            font-weight: bold;
            margin: 40px 0 20px;
        }

        .doctors, .reasons {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
        }

        .doctor-card {
            text-align: center;
            padding: 20px;
            border-radius: 8px;
            background-color: #fff;
            border: 1px solid #ddd;
        }

            .doctor-card img {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                object-fit: cover;
                margin-bottom: 10px;
            }

        .doctor-name {
            color: #007bff;
            font-weight: bold;
            font-size: 16px;
        }

        .btn {
            display: block;
            width: fit-content;
            margin: 20px auto;
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            border: none;
            cursor: pointer;
        }

        .reason-icon {
            font-size: 40px;
            color: #00bcd4;
            margin-bottom: 10px;
            text-align: center;
        }

        footer {
            background-color: #f9f9f9;
            padding: 20px 0;
            text-align: center;
        }

            footer img {
                height: 60px;
                margin-bottom: 10px;
            }

            footer p {
                color: #007bff;
            }

        .social-icons {
            margin: 10px 0;
        }

            .social-icons i {
                margin: 0 10px;
                font-size: 20px;
                color: #007bff;
                cursor: pointer;
            }

        .navbar-nav {
            display: flex;
            gap: 1rem;
        }

        footer {
            background-color: #2c3e50; 
            color: #ecf0f1; 
            text-align: center;
            padding: 40px 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 20px;
        }

        .footer-logo {
            max-width: 150px; 
            margin-bottom: 20px;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        .icon {
            font-size: 24px;
            color: #ecf0f1;
            transition: transform 0.3s ease, color 0.3s ease;
            cursor: pointer;
        }

            .icon:hover {
                color: #3498db; 
                transform: scale(1.2); 
            }

        p {
            font-size: 14px;
            font-family: 'Arial', sans-serif;
            color: #bdc3c7;
            margin-top: 10px;
        }

        footer a {
            text-decoration: none;
            color: inherit;
        }

      

        .footer-logo {
            max-width: 120px;
        }

        .social-icons {
            gap: 10px;
        }

        p {
            font-size: 12px;
        }

        }
        .nav-item {
            list-style: none;
            transition: transform 0.3s ease, color 0.3s ease;
        }

        .nav-link {
            text-decoration: none;
            color: #333;
            font-size: 1.1rem;
            font-weight: 600;
            padding: 0.5rem 1rem;
            display: flex;
            align-items: center;
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .nav-link:hover {
                background-color: #007bff;
                color: white;
            }

            .nav-link i {
                margin-right: 0.5rem;
            }

        .right-section {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            gap: 1.5rem;
        }

        .icon-btn {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .icon-btn:hover {
                transform: scale(1.1);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            }

        .icon {
            font-size: 30px;
            color: #333;
            transition: opacity 0.3s ease;
        }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background-color: #ff4c4c; 
            color: white;
            font-size: 12px;
            font-weight: bold;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .voice-text {
            font-size: 12px;
            text-align: center;
            color: #333;
            margin-top: 5px;
            font-weight: bold;
        }

        .icon-btn:hover .icon {
            opacity: 0.8;
        }

    </style>
</head>
<body>
    <header>
        <div class="logo">Tashkheesy</div>
        <nav>
            <a href="#">Clinics</a>
            <a href="#reservations">Doctors</a>
            <a href="#WhyTashkheesy">Info</a>
            <a href="#Chat">ChatBot</a>
            <a href="#" style="color: #007bff; font-weight: bold;">Are you a Doctor ?</a>
        </nav>
        <input type="text" placeholder="Search for..." class="search-bar" />
        <div class="right-section">
            <div class="icon-btn">
                <i class="fa fa-bell icon"></i> 
                <div class="notification-badge">9</div>
                <div class="n-notification">notification<br /></div>

            </div>
            <div class="icon-btn">
                <i class="fa fa-microphone icon"></i> 
                <div class="voice-text">Voice<br />Search</div>
            </div>
     
        </div>
        <ul class="navbar-nav ms-auto d-flex align-items-center">
            @if (signInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">
                        <i class="fas fa-user-plus"></i> SignUp
                    </a>
                </li>
            }
        </ul>
    </header>

    <h1 class="main-title">Book with doctor in clinic</h1>
    <div class="grid">
        <div class="card">
            <img src="~/images/specialties/dentistry.png" alt="Dentistry">
            <div class="card-body">
                <h3>Speciality</h3>
                <h4>Dentistry (Teeth)</h4>
                <p>Enamel – The hard, outer layer that protects the tooth from decay.</p>
                <p>Dentin – The layer beneath enamel, sensitive to decay if exposed.</p>
            </div>
        </div>
        <div class="card">
            <img src="~/images/specialties/chest.png" alt="Chest and Respiratory">
            <div class="card-body">
                <h3>Speciality</h3>
                <h4>Chest and Respiratory</h4>
                <p>Egestas elit dui scelerisque ut eu purus aliquam vitae habitasse.</p>
            </div>
        </div>
        <div class="card">
            <img src="~/images/specialties/ent.png" alt="Ear, Nose and Throat">
            <div class="card-body">
                <h3>Speciality</h3>
                <h4>Ear, Nose and Throat</h4>
                <p>Focus: Ear-related disorders, including hearing loss, tinnitus, vertigo, and skull base tumors.</p>
            </div>
        </div>
        <div class="card">
            <img src="~/images/specialties/dermatology.png" alt="Dermatology">
            <div class="card-body">
                <h3>Speciality</h3>
                <h4>Dermatology (Skin)</h4>
                <p>Dermatology is the medical specialty focused on diagnosing and treating conditions related to the skin, hair, nails, and mucous membranes.</p>
            </div>
        </div>
        <div class="card">
            <img src="~/images/specialties/eyes.png" alt="Ophthalmology">
            <div class="card-body">
                <h3>Speciality</h3>
                <h4>Ophthalmology (Eyes)</h4>
            </div>
        </div>
        <div class="card">
            <img src="~/images/specialties/bones.png" alt="Orthopedics">
            <div class="card-body">
                <h3>Speciality</h3>
                <h4>Orthopedics (Bones)</h4>
            </div>
        </div>
        <div class="card">
            <img src="~/images/specialties/pediatrics.png" alt="Pediatrics">
            <div class="card-body">
                <h3>Speciality</h3>
                <h4>Pediatrics and New Born (Child)</h4>
            </div>
        </div>
        <div class="card">
            <img src="~/images/specialties/pain.png" alt="Pain Management">
            <div class="card-body">
                <h3>Speciality</h3>
                <h4>Pain Management</h4>
            </div>
        </div>
    </div>
    <a href="#" class="btn">See More</a>

    <div class="container" id="reservations">
        <div class="section-title">Reservations</div>
        <h2 style="margin-left: 20px;">Doctors</h2>
        <div class="doctors">
            <div class="doctor-card">
                <img src="~/images/specialties/doctor.jpg" alt="Dr Omar">
                <div class="doctor-name">Dr. Omar Eldidi</div>
                <p>Consultant of Dentistry (Teeth)</p>
                <p>⭐ 5 | 👁️ 62101</p>
                <button class="btn">Select</button>
            </div>
            <div class="doctor-card">
                <img src="~/images/specialties/doctor2.jpg" alt="Dr Ayman">
                <div class="doctor-name">Dr. Ayman Ashour</div>
                <p>Consultant Neurologist</p>
                <p>⭐ 5 | 👁️ 65130</p>
                <button class="btn">Select</button>
            </div>
        </div>
        <a href="#" class="btn">See More</a>
    </div>


    <div class="container" id="WhyTashkheesy">
        <div class="section-title">Why Tashkheesy is the best choice for you?</div>
        <div class="reasons">
            <div class="card">
                <div class="reason-icon"><i class="fas fa-clock"></i></div>
                <h4>Healthcare on Your Terms</h4>
                <p>Book your doctor anytime, anywhere 24/7</p>
            </div>
            <div class="card">
                <div class="reason-icon"><i class="fas fa-user-md"></i></div>
                <h4>Top doctors match your condition</h4>
                <p>Read reviews, explore profiles and services</p>
            </div>
            <div class="card">
                <div class="reason-icon"><i class="fas fa-money-bill-wave"></i></div>
                <h4>Free Service</h4>
                <p>No additional fees incurred upon booking</p>
            </div>
        </div>
    </div>
    <footer class="footer">
        <img src="~/images/specialties/Logo.png" alt="Tashkheesy Logo" class="footer-logo" />
        <div class="social-icons">
            <i class="fab fa-linkedin icon"></i>
            <i class="fab fa-instagram icon"></i>
            <i class="fab fa-facebook icon"></i>
            <i class="fab fa-twitter icon"></i>
        </div>
        <p>&copy; Tashkheesy 202X. All rights reserved.</p>
    </footer>
  
    <script>
        const searchInput = document.querySelector('.search-bar');
        const cards = document.querySelectorAll('.card');

        searchInput.addEventListener('input', function () {
            const query = this.value.toLowerCase();
            cards.forEach(card => {
                const title = card.querySelector('h4')?.textContent.toLowerCase() || '';
                const description = card.querySelector('p')?.textContent.toLowerCase() || '';
                if (title.includes(query) || description.includes(query)) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });
        });

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const target = document.querySelector(targetId);
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
</body>
</html>
